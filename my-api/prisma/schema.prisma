generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id Int @id @default(autoincrement())
  firstname String
  lastname String
  email String @unique
  password String
  role Role 
  isActive Boolean
  createAt DateTime @default(now())

  cartlines Cartline[]
  userRatings userRating[]
 
  @@map("users")
}

model Poster {
  id Int @id @default(autoincrement())
  name String
  slug String
  description String
  image String
  width Int
  height Int
  price Decimal
  stock Int
  createdAt DateTime @default(now())
  updatedAt DateTime

  cartlines Cartline[]
  userRatings userRating[]
  genrePosterRel genrePosterRel[]
  

  @@map("posters")
}

model userRating {
  id Int @id @default (autoincrement())
  userId Int
  posterId Int
  numStars Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  poster Poster @relation(fields: [posterId], references: [id])

  @@map("userRatings")
}

model genrePosterRel {
  genreId Int
  posterId Int

  genre Genre @relation(fields: [genreId], references: [id])
  poster Poster @relation(fields: [posterId], references: [id])

  @@id([genreId, posterId])
  @@map("genrePosterRels")
}

model Genre {
  id Int @id @default(autoincrement())
  title String
  slug String
  createdAt DateTime @default(now())
  updatedAt DateTime
  
  genrePosterRel genrePosterRel[]

  @@map("genres")
}

model Cartline {
  id Int @id @default(autoincrement())
  userId Int
  posterId Int
  quantity Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  poster Poster @relation(fields: [posterId], references: [id])

  @@map("cartline")
}
